{
  "name": "node-express-typescript-api-boilerplate",
  "version": "1.1.0",
  "description": "Node-Express-TypeScript api boilerplate",
  "main": "src/index.ts",
  "scripts": {
    "git": "git add . && git commit -m",
    "test": "set NODE_ENV=test && jest --detectOpenHandles",
    "devStart": "set NODE_ENV=test && nodemon --exec ts-node src/index.ts",
    "start": "set NODE_ENV=production && ts-node src/index.ts",
    "build": "rm -rf ./build && tsc --project .",
    "gen": "typeorm migration:create -n"
  },
  "keywords": [
    "boilerplate",
    "typescript",
    "node",
    "express",
    "api"
  ],
  "author": "Nagy Viktor",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "email-validator": "^2.0.4",
    "express": "^4.17.1",
    "helmet": "^4.2.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "mysql": "^2.18.1",
    "nodemailer": "^6.4.17",
    "reflect-metadata": "^0.1.13",
    "supertest": "^6.0.1",
    "typeorm": "^0.2.29",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "2.8.8",
    "@types/dotenv": "^8.2.0",
    "@types/email-validator": "^1.0.6",
    "@types/express": "^4.17.8",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^26.0.19",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.165",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.5",
    "@types/mysql": "^2.15.16",
    "@types/node": "^14.14.12",
    "@types/nodemailer": "^6.4.0",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@types/winston": "^2.4.4",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.3",
    "uuid": "^8.3.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "verbose": true,
    "forceExit": true,
    "coverageDirectory": "__tests__"
  }
}
